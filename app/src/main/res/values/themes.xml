<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoolMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
 <!--       <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/zhuti_color</item>
        <item name="colorSecondaryVariant">@color/zhuti_color</item>
        <item name="colorSecondary">@color/zhuti_color</item>


        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        &lt;!&ndash; Secondary brand color. &ndash;&gt;


        <item name="colorOnSecondary">@color/black</item>
        &lt;!&ndash; Status bar color. &ndash;&gt;
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!-- 启用刘海屏适配 -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        <!-- 全屏显示 -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- 启用边缘发光效果 -->
        <item name="android:colorEdgeEffect">@color/primary_pink</item>
    </style>

    <!-- ✨✨✨ 闪屏主题（完全全屏） -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 无标题栏 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- 全屏显示 -->
        <item name="android:windowFullscreen">true</item>

        <!-- 透明状态栏和导航栏 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- 白色背景 -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- 布局延伸到系统栏后面 -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- 防止内容被遮挡 -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- ✨✨✨ 全屏主题（用于图片预览） -->
    <style name="FullScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>