<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    >



    <ImageView
        android:id="@+id/user_home_play_music_img"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:src="@drawable/icon_gd"
        android:scaleType="fitXY"
       />

    <TextView
        android:id="@+id/user_home_play_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="民谣"/>

    <TextView
        android:id="@+id/user_home_play_music_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/user_home_play_music_img"
        android:layout_marginBottom="10dp"
        android:text="36 首"/>



    <ImageView
        android:id="@+id/user_home_play_music_run"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_run"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:layout_alignBottom="@+id/user_home_play_music_img"
        android:layout_toRightOf="@+id/user_home_play_music_count"
        android:layout_marginBottom="10dp"
       />

</RelativeLayout>