<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- ========== 固定区域：顶部搜索栏 ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/home_header_gradient"
        android:paddingTop="35dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现音乐"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"/>

        <!-- 搜索框 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <Button
                android:id="@+id/man_home_music_search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="搜索儿歌、歌手..."
                android:textSize="15sp"
                android:textColor="#999999"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical|left"
                android:textAllCaps="false"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- ========== 固定区域：推荐歌单部分（隐藏） ========== -->
    <LinearLayout
        android:id="@+id/playlist_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:visibility="gone">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="推荐歌单"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多 ›"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- 歌单列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/man_home_playlist_srecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clipToPadding="false"/>

    </LinearLayout>

    <!-- ========== 固定区域："我的儿歌"标题栏 ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#F5F5F5">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/music_note"
            android:layout_marginRight="8dp"
            app:tint="#FF6B9D" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的儿歌"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/play_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textSize="14sp"
            android:textColor="#FF6B9D"
            android:drawableRight="@drawable/play_circle"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- ========== 可滚动区域：歌曲列表 + 底部提示 ========== -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ✨ 使用支持回弹效果的 NestedScrollView -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="always"
            android:background="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 歌曲列表卡片 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/man_home_rank_srecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:nestedScrollingEnabled="false"/>

                </androidx.cardview.widget.CardView>

                <!-- ✨✨✨ 底部提示区域 -->
                <LinearLayout
                    android:id="@+id/bottom_hint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="90dp"
                    android:alpha="0"
                    android:visibility="gone">

                    <!-- 分割线 -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp"/>

                    <!-- 提示文字 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已经到底啦 ~"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:drawableTop="@drawable/ic_bottom_hint"
                        android:drawablePadding="8dp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</LinearLayout>