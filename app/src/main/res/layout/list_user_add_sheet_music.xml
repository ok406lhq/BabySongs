<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/sheet_bg"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"

    android:id="@+id/user_my_sheet_list_add_detail_father"
    android:gravity="left|center_vertical|center_horizontal"
    >

    <TextView
        android:id="@+id/user_my_sheet_list_add_detail_index"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="1"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!--圆角矩形-->
    <ImageView
        android:id="@+id/user_my_sheet_list_add_detail_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_gd"
        android:padding="5dp"

       />

    <TextView
        android:id="@+id/user_my_sheet_list_add_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:textSize="20sp"
        android:textColor="#D1313131"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_weight="3"
        android:text="怎么都要爱-李华"/>



    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="添加歌曲"
        android:layout_weight="1"
        android:id="@+id/user_my_sheet_list_add_detail_add"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_margin="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="移除音乐"
        android:layout_weight="1"
        android:visibility="gone"
        android:id="@+id/user_my_sheet_list_add_detail_del"
        android:background="#F44336"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="#FFFFFF"
        android:layout_margin="3dp"
        />



</LinearLayout>