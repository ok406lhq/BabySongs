<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.UserManageActivity">


    <FrameLayout
        android:id="@+id/user_home_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



    <LinearLayout
        android:id="@+id/user_music_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/music_bg"


        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >






        <SeekBar
            android:id="@+id/user_music_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="#E7BF2A2A"
            android:layout_centerInParent="true" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <ImageButton
                android:id="@+id/user_home_tx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_gd"


                android:scaleType="fitCenter"

                android:layout_marginLeft="15dp" />


            <TextView
                android:id="@+id/user_home_name"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="野山花-小铭"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <ImageButton
                android:id="@+id/user_home_run"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_gravity="end"
                android:gravity="end"
                android:src="@drawable/music_run"
                android:scaleType="fitCenter"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>




    </LinearLayout>






    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/user_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_header_gradient"
        app:menu="@menu/menu_user_bottom_menu"
        />

</LinearLayout>